{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "app/**",
      "!.vscode",
      "!.vscode/*",
      "!.vscode/settings.json",
      "components/**",
      "convex/**",
      "hooks/**",
      "lib/**",
      "types/**",
      "!components/tiptap",
      "!components/skeletons",
      "!components/ui",
      "!components/landingpage",
      "!node_modules",
      "!e2e",
      "!dist",
      "!.convex",
      "!playwright-report",
      "!.next",
      "!components/__tests__",
      "!convex/_generated",
      "!convex/tsconfig.json",
      "!vitest.config.mts",
      "!biome.json",
      "!.storybook",
      "!ui",
      "!stories",
      "!.zed",
      "!*.svg",
      "!app/globals.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "auto",
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noMagicNumbers": "off",
        "noNestedTernary": "off",
        "useNumericSeparators": "off",
        "useBlockStatements": "off",
        "useFilenamingConvention": "off",
        "noRestrictedImports": {
          "level": "warn",
          "options": {
            "paths": {
              "./lib/server": {
                "importNames": [
                  "authQuery",
                  "authMutation",
                  "authAction",
                  "query",
                  "mutation",
                  "action"
                ],
                "message": "Use createAuthorizedQuery/createAuthorizedMutation/createAuthorizedAction instead."
              },
              "convex/lib/server": {
                "importNames": [
                  "authQuery",
                  "authMutation",
                  "authAction",
                  "query",
                  "mutation",
                  "action"
                ],
                "message": "Use createAuthorizedQuery/createAuthorizedMutation/createAuthorizedAction instead."
              },
              "convex/server": {
                "importNames": ["query", "mutation", "action"],
                "message": "Use createAuthorizedQuery/createAuthorizedMutation/createAuthorizedAction from convex/lib/server."
              },
              "convex/": {
                "importNames": ["query", "mutation", "action"],
                "message": "Use createAuthorizedQuery/createAuthorizedMutation/createAuthorizedAction from convex/lib/server."
              }
            }
          }
        }
      },
      "suspicious": {
        "noTsIgnore": "off",
        "noConsole": "off",
        "useAwait": "off",
        "noUnknownAtRules": "off",
        "noBitwiseOperators": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "a11y": {
        "useSemanticElements": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      },
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "extends": ["ultracite/core", "ultracite/next", "ultracite/react"]
}
